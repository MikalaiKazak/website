<databaseChangeLog
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet id="4" author="mikalay.kazak@gmail.com">
		<createTable tableName="comment">
			<column
					autoIncrement="false"
					name="id"
					type="bigint">
				<constraints
						primaryKeyName="pk_comment_id"
						primaryKey="true"
						nullable="false"/>
			</column>

			<column
					name="userId"
					type="bigint">
				<constraints nullable="false"/>
			</column>

			<column
					name="text"
					type="text">
				<constraints nullable="false"/>
			</column>

			<column
					name="updated_at"
					type="timestamp">
				<constraints nullable="false"/>
			</column>

			<column
					name="post_id"
					type="bigint">
				<constraints nullable="false"/>
			</column>

			<column
					name="updated_at"
					type="timestamp">
				<constraints nullable="false"/>
			</column>
		</createTable>

		<addForeignKeyConstraint baseTableName="comment" baseColumnNames="post_id"
								 constraintName="fk_comment_post_id"
								 referencedTableName="post" referencedColumnNames="id"

		<rollback>
			<dropTable tableName="comment"/>
		</rollback>
	</changeSet>
</databaseChangeLog>